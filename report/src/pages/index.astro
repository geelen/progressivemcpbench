---
import ResultsTable from "../components/ResultsTable";
import type { ReportJson } from "../types/report";

import reportData from "../../../data/reports/report.json";

const report = reportData as ReportJson;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Progressive MCP Bench Results</title>
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
          Ubuntu, Cantarell, sans-serif;
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fefefe;
        color: #333;
      }
      h1 {
        margin-bottom: 8px;
      }
      .meta {
        color: #666;
        font-size: 14px;
        margin-bottom: 24px;
      }
      .summary {
        display: flex;
        gap: 24px;
        margin-bottom: 24px;
        flex-wrap: wrap;
      }
      .stat {
        background: #f5f5f5;
        padding: 16px 24px;
        border-radius: 8px;
      }
      .stat-label {
        font-size: 12px;
        text-transform: uppercase;
        color: #666;
        margin-bottom: 4px;
      }
      .stat-value {
        font-size: 24px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Progressive MCP Bench Results</h1>
    <p class="meta">
      Generated: {new Date(report.generatedAt).toLocaleString()}
    </p>

    <div class="summary">
      <div class="stat">
        <div class="stat-label">Total Runs</div>
        <div class="stat-value">{report.runs.length}</div>
      </div>
      <div class="stat">
        <div class="stat-label">Models</div>
        <div class="stat-value">{report.dimensions.models.length}</div>
      </div>
      <div class="stat">
        <div class="stat-label">Strategies</div>
        <div class="stat-value">{report.dimensions.strategies.length}</div>
      </div>
    </div>

    <ResultsTable
      client:load
      runs={report.runs}
      models={report.dimensions.models}
      strategies={report.dimensions.strategies}
    />
  </body>
</html>
